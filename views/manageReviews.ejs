<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Manage Reviews</title>
  <link rel="stylesheet" href="/css/manageReviews.css" />
</head>
<body>
  <div class="container">
    <h1>All Reviews</h1>

    <% if (reviews.length === 0) { %>
      <p>No reviews found.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Service ID</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Actions</th> <!-- New column for admin actions -->
          </tr>
        </thead>
        <tbody>
          <% reviews.forEach(review => { %>
            <tr>
              <td><%= review.id %></td>
              <td><%= review.user_id %></td>
              <td><%= review.service_id %></td>
              <td><%= review.rating %> / 5</td>
              <td><%= review.review_text && review.review_text.length > 50 ? review.review_text.substring(0, 50) + '...' : review.review_text %></td>
              <td><%= new Date(review.createdAt).toLocaleDateString() %></td>
              <td>
                <form action="/reviews/<%= review.id %>?_method=PUT" method="POST" class="inline-form">
                  <select name="rating" required>
                    <% for(let i = 1; i <= 5; i++) { %>
                      <option value="<%= i %>" <%= review.rating === i ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                  </select>
                  <input type="text" name="comment" value="<%= review.comment %>" required maxlength="200" />
                  <button type="submit" class="btn-update">Update</button>
                </form>

                <form action="/reviews/<%= review.id %>?_method=DELETE" method="POST" class="inline-form">
                  <button type="submit" class="btn-delete" onclick="return confirm('Delete this review?');">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
