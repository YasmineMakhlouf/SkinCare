<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Book Appointment</title>
  <link rel="stylesheet" href="/css/bookAppointment.css" />
</head>
<body>
  <div class="container">
    <h1>Book an Appointment</h1>

    <% if (!userId) { %>
      <p class="info">Please <a href="/login">log in</a> to book an appointment.</p>
    <% } else { %>
      <form action="/appointments" method="POST" class="appointment-form">
        <label for="service">Choose a Service:</label>
        <select name="service_id" id="service" required>
          <option value="" disabled selected>-- Select a Service --</option>
          <% services.forEach(service => { %>
            <option value="<%= service.service_id %>"><%= service.service_name %></option>
          <% }) %>
        </select>
      
        <label for="date">Date:</label>
        <input type="date" name="date" id="date" required min="<%= new Date().toISOString().split('T')[0] %>">
      
        <button type="submit" class="btn-submit">Book Appointment</button>
      </form>

      <h2>Your Appointments</h2>
      <% if (appointments.length === 0) { %>
        <p>No appointments yet.</p>
      <% } else { %>
        <ul class="appointment-list">
          <% appointments.forEach(app => { %>
            <li><strong><%= app.Service.service_name %></strong> - <%= app.date %> at <%= app.time %></li>
          <% }) %>
        </ul>
      <% } %>
    <% } %>
  </div>
</body>
</html>
