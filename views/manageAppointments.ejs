<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Manage Appointments | Amani Skin Care</title>
  <link rel="stylesheet" href="/css/manageAppointments.css" />
</head>
<body>
  <div class="container">
    <h1>Manage Appointments</h1>

    <% if (appointments.length === 0) { %>
      <p>No appointments available.</p>
    <% } else { %>
      <div class="appointments">
        <% appointments.forEach(appointment => { %>
          <div class="appointment-card">
            <h3>Appointment #<%= appointment.appointment_id %></h3>
            <p><strong>User ID:</strong> <%= appointment.user_id %></p>
            <p><strong>Service ID:</strong> <%= appointment.service_id %></p>
            <p><strong>Date:</strong> <%= new Date(appointment.appointment_date).toLocaleDateString() %></p>

            <form class="update-form" action="/appointments/<%= appointment.appointment_id %>?_method=PUT" method="POST">
              <label for="date">New Date:</label>
              <input type="date" name="appointment_date" required />
              <button type="submit">Update</button>
            </form>

            <form class="delete-form" action="/appointments/<%= appointment.appointment_id %>?_method=DELETE" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
